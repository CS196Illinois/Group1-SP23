<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">
    <TextView
        android:id="@+id/goalWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Daily Water Intake Goal" />
    <TextView
        android:id="@+id/counterTxt"
        android:layout_below="@id/goalWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="13 Cups" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttongroup"
        android:layout_below="@id/counterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:text="-"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:text="Reset"
            android:textSize="30sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/goalExercise"
        android:layout_below="@id/buttongroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Daily Exercise Goal" />
    <TextView
        android:id="@+id/counterTxtExercise"
        android:layout_below="@id/goalExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="45 Minutes" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttongroup2"
        android:layout_below="@id/counterTxtExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/minusEx"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/resetEx"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="30sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/plusEx"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <Button
        android:id="@+id/submit_goals"
        android:layout_below="@id/buttongroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/dark_blue"
        android:text="Submit"
        android:textSize="40sp"

        android:layout_marginTop="40dp"/>
</RelativeLayout>




