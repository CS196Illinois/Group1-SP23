<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/waterGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Water Intake"/>
    <TextView
        android:id="@+id/counterTxt1"
        android:layout_below="@id/waterGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="12 cups" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonGroup1"
        android:layout_below="@id/counterTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
        <Button
            android:id="@+id/minus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="30sp" />
        <Button
            android:id="@+id/submit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            android:text="Submit"
            android:textSize="30sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/plus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="30sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/exerciseGoal"
        android:layout_below="@+id/buttonGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Exercise"/>
    <TextView
        android:id="@+id/counterTxt2"
        android:layout_below="@id/exerciseGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="30 minutes" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonGroup2"
        android:layout_below="@id/counterTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
        <Button
            android:id="@+id/minus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="30sp" />
        <Button
            android:id="@+id/submit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            android:text="Submit"
            android:textSize="30sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/plus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="30sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/moveGoal"
        android:layout_below="@+id/buttonGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:text="Calories Burned"/>
    <TextView
        android:id="@+id/counterTxt3"
        android:layout_below="@id/moveGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:text="500 calories" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonGroup3"
        android:layout_below="@id/counterTxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >
        <Button
            android:id="@+id/minus3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="30sp" />
        <Button
            android:id="@+id/submit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            android:text="Submit"
            android:textSize="30sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/plus3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="30sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>